<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.niduc.MainViewController">
    <left>
        <VBox spacing="10" style="-fx-padding: 10;">
            <GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" minHeight="200" minWidth="400" style="-fx-padding: 10;">
                <Label text="Simulation controls:" style="-fx-font-weight: bold" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                <Button fx:id="runButton" text="Run" onAction="#runSimulation" GridPane.rowIndex="1" GridPane.columnIndex="0" minWidth="200"/>
                <Button fx:id="pauseButton" text="Pause" onAction="#pauseSimulation" GridPane.rowIndex="1" GridPane.columnIndex="1" minWidth="200"/>
                <Slider fx:id="simulationSpeedSlider" min="1" max="200" majorTickUnit="10" minorTickCount="2" showTickLabels="true" showTickMarks="true" minWidth="410" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            </GridPane>
        </VBox>
    </left>
    <center>
    </center>
    <right>
        <GridPane xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" minHeight="200" minWidth="400" style="-fx-padding: 10;">
        </GridPane>
    </right>
</BorderPane>